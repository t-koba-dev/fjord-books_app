<div class="field">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>

<div class="field">
  <%= f.label :postal_code %>
  <%= f.text_field :postal_code %>
</div>

<div class="field">
  <%= f.label :address %>
  <%= f.text_field :address %>
</div>

<div class="field">
  <%= f.label :self_introduction %>
  <%= f.text_area :self_introduction %>
</div>

<% if @user.avatar.attached? %>
  <%= image_tag @user.avatar.variant(resize: "75x75") %>
<% end %>

<div class="field">
  <%= f.label :avatar %>
  <%= f.file_field :avatar, accept:'image/jpg, image/png, image/gif' %>
</div>
