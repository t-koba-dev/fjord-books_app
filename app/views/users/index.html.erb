<h1><%= "ユーザー一覧" %></h1>

<table>
  <thead>
    <tr>
      <th><%= "email" %></th>
      <th><%= "postal_code" %></th>
      <th><%= "address" %></th>
      <th><%= "self_introduction" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.postal_code %></td>
        <td><%= user.address %></td>
        <td><%= user.self_introduction %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @users %>

<br>

<%= link_to 'root', root_path %>
