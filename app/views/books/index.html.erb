<p id="notice"><%= notice %></p>

<h1><%= t('.heading') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('.title') %></th>
      <th><%= t('.memo') %></th>
      <th><%= t('.author') %></th>
      <th><%= t('.picture') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to t('.links.show_book'), book %></td>
        <td><%= link_to t('.links.edit_book'), edit_book_path(book) %></td>
        <td><%= link_to t('.links.destroy_book'), book, method: :delete, data: { confirm: "#{t :confirmation_to_destroy, scope: 'notices'}" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.links.new_book'), new_book_path %>
